{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
  },
  "include": [ "./src" ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "test/"
  ]
}